{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Device",
    "type": "object",
    "properties": {
        "hostname": { "type": "string" },
        "enabled": { "type": "boolean" },
        "status": {
            "type": "string",
            "enum": ["up", "down"]
        },
        "interfaces": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": { "type": "integer"},
                    "name": { "type": "string"},
                    "vlan": { "type": "integer"}
                },
                "required": ["id", "name"]
            }
        }
    },
    "required": ["hostname", "enabled", "status"]
}